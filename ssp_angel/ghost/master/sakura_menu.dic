	_nextprev += "\n \n[-100]\f[align,right]"
	if _page < _total_pages - 1; _nextprev += "\__q[OnCallGhostMenu,%(_page + 1)]>>>\__q"
	else; _nextprev += "\f[color,disable]>>>\f[color,default]"
	_nextprev += "\n \n[-100]\f[align,left]"
	
	if _count == 1
	{
