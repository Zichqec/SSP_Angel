		for _char = 0; _char < 2; _char++
		{
			"\%(_char)\f[align,center]\f[bold,1]Flavor Selection\f[bold,default]\n"
			_i = 0
			foreach _colors; _color
			{
				_item = "\__q[OnBalloonMenu.ChangeColor,%(_color[1]),%(_char)]%(_color[0])\__q"
